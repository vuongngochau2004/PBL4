<div class="card">
  <div class="card-body">

    <h5 class="card-title">Tỷ giá ngoại tệ <%= bank.name %> mới nhất ngày hôm nay</h5>

    <div class="container">
      <div class="row align-items-center">
        <div class="col-auto">
          <div class="calendar-icon p-2 rounded">
            <i class="bi bi-calendar"></i>
            <span class="ms-2"><%= dateExchangeRate %></span>
          </div>
        </div>
        <div class="col">
          <a href="/exchange-rate/<%= bank.id %>/chart?date=<%= dateExchangeRate %>" class="btn btn-color float-end" >Xem biểu đồ</a>
        </div>
        <div class="col text-end">
          <a href="/exchange-rate/<%= bank.id %>?date=<%= dateExchangeRate %>&action=pre" class="btn btn-color me-2">
            <i class="bi bi-chevron-left"></i> HÔM TRƯỚC
          </a>
          <a href="/exchange-rate/<%= bank.id %>?date=<%= dateExchangeRate %>&action=next" class="btn btn-color">
            HÔM SAU <i class="bi bi-chevron-right"></i>
          </a>
        </div>
      </div>
    </div>

    <table class="table table-hover table-bordered">
      <thead class="table">
        <tr>
          <th scope="col">Ngoại tệ </th>
          <th scope="col">Tên ngoại tệ </th>
          <th scope="col">Mua tiền mặt</th>
          <th scope="col">Mua chuyển khoản</th>
          <th scope="col">Bán tiền mặt</th>
          <th scope="col">Bán chuyển khoản</th>
        </tr>
      </thead>
      <tbody>
        <% exchangeRates.forEach(function(item) { %>
        <tr>
          <th scope="row"><a href="/currency/<%= item.currency.code.slice(0, 3) %>" class="currency-icon" title="Tỷ giá <%= item.currency.code %>" >
            <span class="cur-icon ci-<%= item.currency.code_lowercase %>"></span>
            <span><%= item.currency.code %></span>
          </a></th>
          <td><%= item.currency.name %></td>
          <td><%= item.buy_cash_price %></td>
          <td><%= item.buy_transfer_price %></td>
          <td><%= item.sell_cash_price %></td>
          <td><%= item.sell_transfer_price %></td>
        </tr>
        <% }); %>
      </tbody>
    </table>
  </div>
</div>
<div class="card pg-3 p-3" style="height: 450px">
  <div class="card-header bg-white">
      <h5 class="mb-0">$ Tỷ giá Vietcombank</h5>
  </div>
  <div class="table-responsive">
      <table class="table table-hover mb-0">
          <thead>
              <tr>
                  <th class="text-brown">Ngoại tệ</th>
                  <th class="text-brown">Mua vào</th>
                  <th class="text-brown">Bán ra</th>
              </tr>
          </thead>
          <tbody>
            <% exchangeRateVietcombank.forEach(function(item) { %>
              <tr>
                  <td><a href="/currency/<%= item.currency.code.slice(0, 3) %>" title="Tỷ giá <%= item.currency.code %>"><%= item.currency.code %></a></td>
                  <td><%= item.buy_cash_price %></td>
                  <td><%= item.sell_cash_price %></td>
              </tr>
            <% }); %>
          </tbody>
      </table>
  </div>
  <div class="card-footer text-muted text-center">
      <small>Cập nhật lúc <%= dateUpdate %></small><br>
      <small><a href="/exchange-rate/37" class="text-primary text-decoration-none">Xem bảng tỷ giá hối đoái vietcombank.com </a></small>
  </div>
</div>