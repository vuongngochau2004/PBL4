<div class="container-fluid px-4">
    <div class="card">
      <div class="table-card">
          <!-- Tiêu đề bảng -->
          <div class="table-header d-flex justify-content-between align-items-center">
              <div>
                  <h5 class="fw-bold mb-1">Quản Lý Người Dùng</h5>
                  <p class="text-secondary mb-0">Quản lý thành viên và quyền của họ</p>
              </div>
              <div class="d-flex gap-3">
                  <div class="position-relative">
                      <i class="fas fa-search position-absolute top-50 start-0 translate-middle-y ms-3 text-secondary"></i>
                      <input type="text" class="form-control search-input ps-5" placeholder="Tìm kiếm người dùng...">
                  </div>
              </div>
          </div>
  
          <!-- Bảng -->
          <div class="table-responsive">
              <table class="table align-middle">
                  <thead>
                      <tr>
                          <th>Người Dùng</th>
                          <th>Địa Chỉ</th>
                          <th>Số Điện Thoại</th>
                          <th>Quyền Hạn</th>
                          <th>Trạng Thái</th>
                          <th>Thao Tác</th>
                      </tr>
                  </thead>
                  <tbody>
                      <% users.forEach(user => { %> 
                      <tr>
                          <td>
                              <div class="d-flex align-items-center">
                                    <div class="avatar-wrapper me-3">
                                        <img src="/img/<%= user.image %>" class="rounded-circle">
                                    </div>
                                    <div>
                                        <div class="fw-semibold"><%= user.fullname %></div>
                                        <div class="text-secondary small"><%= user.email %></div>
                                    </div>
                              </div>
                          </td>
                         
                          
                          <td>
                              <div class="d-flex align-items-center">
                                  <%= user.address %>
                              </div>
                          </td>
                          <td>
                              <div class="d-flex align-items-center">
                                  <%= user.phone %>
                              </div>
                          </td>
                          <td>
                              <div class="d-flex align-items-center">
                                  <% if(user.role === 'admin') { %>
                                  <i class="fas fa-shield-alt me-2 text-primary"></i>
                                  Quản Trị Viên 
                                  <% } else { %>
                                  <i class="fas fa-user me-2 text-primary"></i>
                                      Khách Hàng
                                  <% } %>
                              </div>
                          </td>
                          <td>
                              <span class="status-badge status-<%= user.status === 'active' ? 'active' : 'pending' %>"><%= user.status === 'active' ? 'Hoạt Động' : 'Đã Khóa' %></span>
                          </td>
                          <td>
                              <div class="d-flex gap-2">
                                  <a href="#" class="action-btn" title="Xóa">
                                      <i class="fas fa-lock"></i>
                                  </a>
                              </div>
                          </td>
                      </tr>
                      <% }) %>
                  </tbody>
              </table>
          </div>
  
          <!-- Phân Trang -->
          <div class="d-flex justify-content-between align-items-center mt-4">
              <div class="text-secondary">
                  Hiển thị từ 1 đến 10 trong tổng số 50 mục
              </div>
              <nav>
                  <ul class="pagination mb-0">
                      <li class="page-item">
                          <a class="page-link" href="#">
                              <i class="fas fa-chevron-left"></i>
                          </a>
                      </li>
                      <li class="page-item active">
                          <a class="page-link" href="#">1</a>
                      </li>
                      <li class="page-item">
                          <a class="page-link" href="#">2</a>
                      </li>
                      <li class="page-item">
                          <a class="page-link" href="#">3</a>
                      </li>
                      <li class="page-item">
                          <a class="page-link" href="#">
                              <i class="fas fa-chevron-right"></i>
                          </a>
                      </li>
                  </ul>
              </nav>
          </div>
      </div>
    </div>
  </div>
  